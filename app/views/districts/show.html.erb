<ul class="breadcrumb">
  <%= render "layouts/breadcrumbs/home" %>
</ul>

<h1><%= @district.name %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Facilities</th>
    </tr>
  </thead>
  <tbody>
    <% @district.facilities.order(:name).each do |facility| %>
      <tr>
        <td><%= link_to facility.name, district_facility_path(@district, facility) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<section>
  <h3>Facility not listed?</h3>

  <div class="row">
    <div class="col-6">
      <%= bootstrap_form_with(model: [@district, @facility], local: true, label_errors: true) do |form| %>
        <%= form.text_field :name, id: :facility_name, class: "form-input" %>
        <%= form.primary "Add Facility" %>
      <% end %>
    </div>
  </div>
</section>

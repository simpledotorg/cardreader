<ul class="breadcrumb">
  <%= render "layouts/breadcrumbs/home" %>
  <%= render "layouts/breadcrumbs/district" %>
</ul>

<h1><%= @facility.name %></h1>

<p>
  <%= link_to "Add Treatment Card", new_district_facility_patient_path(@district, @facility, @patient), class: "btn btn-primary" %>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Patient Treatment Number</th>
      <th>Registration Date</th>
    </tr>
  </thead>
  <tbody>
    <% @facility.patients.order(:treatment_number).each do |patient| %>
      <tr>
        <td><%= link_to patient.treatment_number, district_facility_patient_path(@district, @facility, patient) %></td>
        <td><%= patient.registered_on.strftime("%d-%m-%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1><%= @admin.email %></h1>

<div class="row">
  <div class="col-md-4 col-lg-3">
    <p>
      <strong>Role:</strong>
      <%= @admin.role.humanize %>
    </p>

    <% if policy(@admin).edit? %>
      <%= link_to 'Edit admin', edit_admin_path(@admin), class: "btn btn-sm btn-primary" %>
    <% end %>
  </div>
</div>

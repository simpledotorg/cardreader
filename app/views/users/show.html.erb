<h1><%= @user.email %></h1>

<div class="row">
  <div class="col-md-4 col-lg-3">
    <p>
      <strong>Role:</strong>
      <%= @user.role.humanize %>
    </p>

    <% if policy(@user).edit? %>
      <%= link_to 'Edit user', edit_user_path(@user), class: "btn btn-sm btn-primary" %>
    <% end %>
  </div>
</div>

<h2>Forgot your password?</h2>

<div class="row">
  <div class="col-md-6">
    <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, label_errors: true) do |f| %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

      <%= f.primary "Send me reset password instructions" %>
    <% end %>
  </div>
</div>

<div class="actions mt-4">
  <%= render "users/shared/links" %>
</div>

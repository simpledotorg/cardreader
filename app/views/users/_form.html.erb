<div class="row">
  <div class="col-md-6">
    <%= bootstrap_form_with(model: user, local: true, autocomplete: "off", label_errors: true) do |form| %>
      <%= form.text_field :email, required: true, autocomplete: "off" %>
      <%= form.select(:role, User.roles.keys.map { |role| [role.titleize, role]} ) %>

      <%= form.primary %>
    <% end %>
  </div>
</div>

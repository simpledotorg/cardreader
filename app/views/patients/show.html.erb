<ul class="breadcrumb">
  <%= render "layouts/breadcrumbs/home" %>
  <%= render "layouts/breadcrumbs/district" %>
  <%= render "layouts/breadcrumbs/facility" %>
</ul>

<h1>Treatment Number <%= @patient.treatment_number %></h1>

<p>Date of Registration: <%= @patient.registered_on %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date Attended</th>
      <th>Blood Pressure</th>
    </tr>
  </thead>
  <tbody>
    <% @patient.blood_pressures.order(:measured_on).each do |blood_pressure| %>
      <tr>
        <td><%= blood_pressure.measured_on.strftime("%d-%m-%Y") %></td>
        <td><%= blood_pressure.systolic %> / <%= blood_pressure.diastolic %></td>
      </tr>
    <% end %>
  </tbody>
</table>
